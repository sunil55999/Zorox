# Telegram Bot System Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# TELEGRAM API CONFIGURATION (REQUIRED)
# =============================================================================

# Get these from https://my.telegram.org/auth
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=abcdefghijklmnopqrstuvwxyz123456

# Your phone number with country code (for Telethon client)
TELEGRAM_PHONE=+1234567890

# =============================================================================
# BOT TOKENS (REQUIRED)
# =============================================================================

# Admin bot token for system management commands (REQUIRED)
# This bot handles all admin commands like /addpair, /blockimage, /listpairs, etc.
ADMIN_BOT_TOKEN=1234567893:ABCDefGhIjKlMnOpQrStUvWxYz123456789

# Primary bot token for message sending (REQUIRED)
TELEGRAM_BOT_TOKEN_1=1234567890:ABCDefGhIjKlMnOpQrStUvWxYz123456789

# Additional bot tokens for load balancing (OPTIONAL)
TELEGRAM_BOT_TOKEN_2=1234567891:ABCDefGhIjKlMnOpQrStUvWxYz123456789
TELEGRAM_BOT_TOKEN_3=1234567892:ABCDefGhIjKlMnOpQrStUvWxYz123456789

# Alternative single token format (if using only one bot)
TELEGRAM_BOT_TOKEN=1234567890:ABCDefGhIjKlMnOpQrStUvWxYz123456789

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL)
# =============================================================================

# Redis URL for caching and session storage
REDIS_URL=redis://localhost:6379

# Enable Redis usage (set to 'true' to enable)
USE_REDIS=false

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Maximum number of worker threads
MAX_WORKERS=10

# Enable debug mode (detailed logging)
DEBUG_MODE=false

# Image similarity threshold (1-20, lower = more strict)
SIMILARITY_THRESHOLD=5

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database file path
DATABASE_PATH=bot.db

# Database backup interval in seconds (3600 = 1 hour)
DATABASE_BACKUP_INTERVAL=3600

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Maximum message queue size
MESSAGE_QUEUE_SIZE=1000

# Maximum retry attempts for failed messages
MAX_RETRIES=3

# Retry delay in seconds
RETRY_DELAY=1.0

# =============================================================================
# RATE LIMITING
# =============================================================================

# Maximum messages per time window
RATE_LIMIT_MESSAGES=30

# Rate limit time window in seconds
RATE_LIMIT_WINDOW=60

# =============================================================================
# HEALTH MONITORING
# =============================================================================

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=30

# Maximum memory usage in MB before alerts
MAX_MEMORY_MB=512

# Maximum CPU usage percentage before alerts
MAX_CPU_PERCENT=80.0

# =============================================================================
# WEB DASHBOARD CONFIGURATION
# =============================================================================

# Dashboard web server port
DASHBOARD_PORT=5000

# Dashboard bind address (0.0.0.0 for all interfaces)
DASHBOARD_HOST=0.0.0.0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Comma-separated list of admin user IDs who can control the bot
ADMIN_USER_IDS=123456789,987654321

# Webhook secret for API security (optional)
WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Prometheus metrics endpoint (optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/bot.log

# Maximum log file size in MB
MAX_LOG_SIZE=100

# Number of log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Session file name for Telethon
SESSION_NAME=session_bot

# Connection timeout in seconds
CONNECTION_TIMEOUT=30

# Request timeout in seconds
REQUEST_TIMEOUT=60

# Maximum concurrent downloads
MAX_CONCURRENT_DOWNLOADS=5

# Enable flood wait handling
HANDLE_FLOOD_WAIT=true

# Maximum flood wait time in seconds
MAX_FLOOD_WAIT=300

# =============================================================================
# DEVELOPMENT SETTINGS (for development/testing only)
# =============================================================================

# Enable testing mode
TESTING=false

# Use test database
TEST_DATABASE=test.db

# Mock external services in testing
MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Enable automatic database backups
AUTO_BACKUP_ENABLED=true

# Backup directory
BACKUP_DIR=backups

# Keep backups for X days
BACKUP_RETENTION_DAYS=30

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Enable email notifications for critical errors
EMAIL_NOTIFICATIONS=false

# SMTP server settings (if email notifications enabled)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=Telegram Bot System <your-email@gmail.com>
SMTP_TO=admin@yourcompany.com

# Discord webhook for notifications (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-url

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable image processing features
ENABLE_IMAGE_PROCESSING=true

# Enable topic forwarding features
ENABLE_TOPIC_FORWARDING=true

# Topic mapping cleanup (days to keep mappings)
TOPIC_MAPPING_CLEANUP_DAYS=30

# Maximum topic mappings in memory
MAX_TOPIC_MAPPINGS=50000

# Enable advanced filtering
ENABLE_ADVANCED_FILTERING=true

# Enable real-time dashboard updates
ENABLE_REALTIME_DASHBOARD=true

# Enable API endpoints
ENABLE_API=true

# Enable metrics collection
ENABLE_METRICS=true
